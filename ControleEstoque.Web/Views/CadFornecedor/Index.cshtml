@model List<ControleEstoque.Web.Models.Fornecedor>
@{
    Layout = "~/Views/Shared/_Cadastro.cshtml";
    ViewBag.Title = "Fornecedores";
    ViewBag.Lista = Model;
}

@section Styles {
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Content/Cadastro/Fornecedor.css" rel="stylesheet" />
    <style>
        .dialogo > .modal-dialog {
            width: 700px !important;
        }

        .modal-body {
            height: 550px;
            overflow-y: scroll;
        }
    </style>
}

@section TituloGrid {
    <th>Nome</th>
    <th>Telefone</th>
    <th>Contato</th>
    <th>Ativo</th>
    <th>Ação</th>
}

@section LinhaGrid {
    @{
        var linha = 0;
        foreach (var item in Model)
        {
            linha++;
            if (linha <= ViewBag.QuantMaxLinhasPorPagina)
            {
                var ativo = (item.Ativo ? "Sim" : "Não");

                <tr data-id="@item.Id">
                    <td>@item.Nome</td>
                    <td>@item.Telefone</td>
                    <td>@item.Contato</td>
                    <td>@ativo</td>
                    <td>
                        <a class="btn btn-primary btn-alterar" style="color: white" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                        <a class="btn btn-danger btn-excluir" style="color: white" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                    </td>
                </tr>
            }
            else
            {
                break;
            }
        }
    }
}


@section CamposCadastro {
    <div class="row">
        <div class="col-md-9">
            @Html.Label("txt_nome", "Nome", new { @class = "control-label" })
            @Html.TextBox("txt_nome", null, new { @class = "form-control" })
        </div>
    </div>

        <div class="form-check-inline" style="margin-top:20px; margin-bottom: 20px;">
            <div class="custom-control custom-radio">
                @Html.RadioButton("cbx_pessoa", (int)ControleEstoque.Web.Models.TipoPessoa.Juridica, new { id = "cbx_pessoa_juridica", @class = "custom-control-input" })
                @Html.Label("cbx_pessoa_juridica", "Pessoa Jurídica", new { @class = "custom-control-label" })
            </div>
            <div class="custom-control custom-radio" style="margin-left: 20px;">
                @Html.RadioButton("cbx_pessoa", (int)ControleEstoque.Web.Models.TipoPessoa.Fisica, new { id = "cbx_pessoa_fisica", @class = "custom-control-input" })
                @Html.Label("cbx_pessoa_fisica", "Pessoa Física", new { @class = "custom-control-label" })
            </div>
        </div>

    
    <div class="row">
        <div class="col-md-4">
            @Html.Label("txt_num_documento", "CPF/CNPJ", new { @class = "control-label" })
            @Html.TextBox("txt_num_documento", null, new { @class = "form-control" })
        </div>
        <div class="col-md-8">
            <div id="container_razao_social">
                @Html.Label("txt_razao_social", "Razão Social", new { @class = "control-label" })
                @Html.TextBox("txt_razao_social", null, new { @class = "form-control" })
